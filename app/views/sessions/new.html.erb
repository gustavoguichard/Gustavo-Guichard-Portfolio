<% if !SiteSetting.all.empty? %>
	<h2>Efetuar Login</h2>
	<%= form_tag sessions_path, :method => :post do %>
		<%= password_field_tag :password, params[:password], :placeholder => "Password" %><br />
		<%= button_tag "Login!", :class => "btn btn-green" %>
	<% end %>
<% else %>
	<h2>Não há configurações ainda</h2>
	<div class="form-actions">
	  <%= link_to 'Criar', new_site_settings_path, :class => "btn btn-green" %>
	</div>
<% end %>