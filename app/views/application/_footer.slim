footer#footer
  .container
    .row
      section.span4
        = raw @site_settings.footer_intro if @site_settings
      section.span5
        address
          = raw @site_settings.footer_contact if @site_settings
      section.span3
        = form_tag portfolio_path, method: :get do
          = text_field_tag :search, params[:search], placeholder: "Search"
        aside#social
          = link_to "Forrst", "http://forrst.com/people/gustavoguichard", class: "Forrst", target: "_blank", rel: "tooltip", title: "Forrst"
          = link_to "] Google +", "https://plus.google.com/110915017162031397251", class: "Google", target: "_blank", rel: "tooltip", title: "Google"
          = link_to "Skype", "skype:gustavo.guichard", class: "Skype", rel: "tooltip", title: "Skype"
          = link_to "Twitter", "http://twitter.com/#!/gustavoguichard", class: "Twitter", target: "_blank", rel: "tooltip", title: "Twitter"
          = link_to "LinkedIn", "http://www.linkedin.com/pub/gustavo-guichard/32/838/315", class: "LinkedIn", target: "_blank", rel: "tooltip", title: "LinkedIn"

